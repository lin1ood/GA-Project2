<!DOCTYPE html>
<html>
	<head>
		<% include ../partials/head.ejs %>
    <% include ../partials/nav.ejs %>
		<title></title>
	</head>
	<body>
		<header>
			<h2>Show Page for <%=volunteer.name%></h2>
			<nav>
				<ul>
					<li>
						<a href="/">Home</a>
					</li>
					<li>
						<a href="/volunteers">Volunteer Index</a>
					</li>
				</ul>
			</nav>
		</header>
		<main>
			<section>
				<h2>Volunteer Info:</h2>
				<ul>
					<li>Name: <%=volunteer.name%></li>
					<li>Cell: <%=volunteer.cell%></li>
					<li>email: <%=volunteer.email%></li>
					<li>MemberID: <%=volunteer.memberID%></li>
				</ul>
			</section>
			<section>
				<h2>Event Commitments:</h2>
				<% if (volunteer.events.length === 0) { %>
						<h2>Member has no Event Commitments</h2><br/>
				<% } else { %>
					<ol>
						<% for(let i = 0; i < volunteer.events.length; i++) { %>
							<li><%=volunteer.events[i].title%></li>
							<ul>
								<li><%=volunteer.events[i].date.toLocaleDateString()%></li>
								<li><%=volunteer.events[i].time%></li>
							</ul>
						<% } %>
					</ol>
				<% } %>
			</section>
			<section>
				<a href="/volunteers/<%=volunteer._id%>/edit">Edit Volunteer</a>
			</section>
      <section>
				<form action="/volunteers/<%=volunteer._id%>?_method=DELETE" method="post">
					<input type="submit" value="Delete Volunteer"/>
				</form>
			</section>
		</main>
		<% include ../partials/footer.ejs %>
	</body>
</html>
