<!DOCTYPE html>
<html>
	<head>
		<% include ../partials/head.ejs %>
    <% include ../partials/nav.ejs %>
		<title></title>
	</head>
	<body>
		<header>
			<h2>Show Page for <%=volunteer.name%></h2>
			<nav>
				<ul>
					<li>
						<a href="/">Home</a>
					</li>
					<li>
						<a href="/volunteers">Volunteer Index</a>
					</li>
				</ul>
			</nav>
		</header>
		<main>
			<section>
				<h2>Volunteer Info:</h2>
				<ul>
					<li>Name: <%=volunteer.name%></li>
					<li>Cell: <%=volunteer.cell%></li>
					<li>email: <%=volunteer.email%></li>
					<li>MemberID: <%=volunteer.memberID%></li>
				</ul>
			</section>
			<section>
				<h2>Event Commitments:</h2>
				<% if (volunteer.events.length === 0) { %>
						<h2>Member has no Event Commitments</h2><br/>
				<% } else { %>
					<table class="u-full-width">
						<thead>
							<tr>
							 	<th>Event Title</th>
								<th>Date</th>
								<th>Time</th>
							</tr>
						</thead>
						<tbody>
						<% for(let i = 0; i < volunteer.events.length; i++) { %>
							<tr>
								<td><%=volunteer.events[i].title%></td>
								<td><%=volunteer.events[i].date.toLocaleDateString()%></td>
								<td><%=volunteer.events[i].time%></td>
							</tr>
						<% } %>
						</tbody>
					</table>
				<% } %>
			</section>
			<section>
				<a class="center" href="/volunteers/<%=volunteer._id%>/edit">Edit Volunteer</a>
			</section>
      <section>
				<form action="/volunteers/<%=volunteer._id%>?_method=DELETE" method="post">
					<input class="button-primary  submit-button" type="submit" value="Delete Volunteer"/>
				</form>
			</section>
		</main>
		<% include ../partials/footer.ejs %>
	</body>
</html>
