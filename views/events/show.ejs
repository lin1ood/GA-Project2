<!DOCTYPE html>
<html>
	<head>
		<% include ../partials/head.ejs %>
    <% include ../partials/nav.ejs %>
		<title>Events</title>
	</head>
	<body>
		<header>
			<h2><%=event.title%></h2>
			<ul>
				<li>Date: <%=event.date.toLocaleDateString()%></li>
				<li>Time: <%=event.time%></li>
			</ul>
			<small>Volunteer:<a href="/volunteers/<%=event._id%>"><%=volunteer.name%></a></small>
			<nav>
				<ul>
					<li>
						<a class="center" href="/events">Events Index</a>
					</li>
				</ul>
			</nav>
		</header>
		<main>
			<section>
			</section>
			<section>
			    <form action="/events/<%=event._id%>?_method=DELETE" method="post">
			        <input class="button-primary  submit-button" type="submit" value="Delete Event"/>
			    </form>
			</section>
			<section>
			    <br/><br/><a class="center" href="/events/<%=event._id%>/edit">Edit this Event</a><br/>
			</section>
		</main>
		<% include ../partials/footer.ejs %>
	</body>
</html>
